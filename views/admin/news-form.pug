extends ../layout

block content
  h1= title

   form(method="post")
      div
         label(for="news-title") Tytuł:
            input(type="text" name='newsTitle')
      div
         label(for="news-description") Opis:
            textarea(name="newsDescription", cols="30", rows="10")
      div
         button(type="submit") Zapisz
   
   if errors !== undefined
      each message in errors.errors
         p=message
   
   if isSent == true
      p Artykuł został dodany pomyślnie